<div id="marginTop" class="container">
    <h1 id="txtAlignCenter" class="display-2"><span class="fa fa-film"></span>COIMA</h1>
    <h1 id="txtAlignCenter" class="lead">Create New List</h1>
    <form method="post" action="/users/{{user.username}}">
        <div class="form-group">
            <label class="lead">List Name:</label>
            <input type="text" name="name" class="form-control"/>
        </div>
        <div class="form-group">
            <label class="lead">Description:</label>
            <input type="text" name="description" class="form-control"/>
        </div>
        <div id="txtAlignCenter" class="form-group">
            <button class="btn btn-outline-warning" type="submit">Create List</button>
        </div>
    </form>
</div>